<!DOCTYPE html>
<html lang="id">

<%- include('../partials/head') %>

<body class="bg-slate-950 text-slate-300 antialiased">
  
  <%- include('../partials/navbar') %>
  
  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center justify-center px-4 pt-16 overflow-hidden">
    <!-- Animated background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-950 to-slate-900"></div>
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-72 h-72 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative z-10 text-center max-w-4xl mx-auto">
      <div class="fade-in mb-6">
        <p class="text-cyan-400 font-semibold text-lg mb-2">ðŸ‘‹ Hi, I'm</p>
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold text-white mb-4">
          <%= data.profile.name %>
        </h1>
        <div class="flex justify-center px-4">
          <h2 id="typewriter-text" class="text-xl sm:text-2xl lg:text-3xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent min-h-[3rem] flex items-center">
            <span class="typewriter-cursor">|</span>
          </h2>
        </div>
      </div>
      
      <p class="fade-in text-xl text-slate-400 mb-8 max-w-2xl mx-auto" style="animation-delay: 0.3s;">
        <%= data.profile.tagline %>
      </p>
      
      <div class="fade-in flex flex-col sm:flex-row gap-4 justify-center flex-wrap" style="animation-delay: 0.6s;">
        <a href="#projects" class="bg-gradient-to-r from-cyan-500 to-blue-500 text-white px-8 py-3 rounded-lg font-semibold hover:shadow-2xl hover:scale-105 transition-all">
          <i class="fas fa-rocket mr-2"></i>View My Work
        </a>
        <a href="#contact" class="glass text-white px-8 py-3 rounded-lg font-semibold hover:bg-white/10 transition-all">
          <i class="fas fa-envelope mr-2"></i>Contact Me
        </a>
        <a href="/assets/CV_Heri_Ramadhan.pdf" download class="glass text-white px-8 py-3 rounded-lg font-semibold hover:bg-white/10 transition-all border border-cyan-500/30">
          <i class="fas fa-download mr-2"></i>Download CV
        </a>
      </div>
      
      <!-- Social Icons -->
      <div class="fade-in flex justify-center space-x-6 mt-12" style="animation-delay: 0.9s;">
        <a href="<%= data.profile.contact.github %>" target="_blank" class="text-slate-400 hover:text-cyan-400 transition text-2xl">
          <i class="fab fa-github"></i>
        </a>
        <a href="<%= data.profile.contact.linkedin %>" target="_blank" class="text-slate-400 hover:text-cyan-400 transition text-2xl">
          <i class="fab fa-linkedin-in"></i>
        </a>
        <a href="mailto:<%= data.profile.contact.email %>" class="text-slate-400 hover:text-cyan-400 transition text-2xl">
          <i class="fas fa-envelope"></i>
        </a>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#about" class="text-slate-500 hover:text-cyan-400 transition">
        <i class="fas fa-chevron-down text-2xl"></i>
      </a>
    </div>
  </section>
  
  <!-- About Section -->
  <section id="about" class="py-20 px-4 bg-slate-900">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-3">
          About <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Me</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto rounded-full"></div>
      </div>
      
      <div class="glass rounded-2xl p-8 md:p-12">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <div class="flex-shrink-0">
            <div class="w-48 h-48 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 p-1">
              <div class="w-full h-full rounded-full bg-slate-800 flex items-center justify-center">
                <i class="fas fa-user text-7xl text-cyan-400"></i>
              </div>
            </div>
          </div>
          <div class="flex-1 text-center md:text-left">
            <h3 class="text-2xl font-bold text-white mb-4"><%= data.profile.role %></h3>
            <p class="text-slate-300 leading-relaxed mb-6">
              <%= data.profile.about %>
            </p>
            <div class="flex flex-wrap gap-3 justify-center md:justify-start">
              </span>
              <span class="px-4 py-2 bg-blue-500/10 text-blue-400 rounded-full text-sm font-semibold border border-blue-500/20">
                <i class="fas fa-university mr-2"></i>UNP Undergraduate
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Skills Section -->
  <section id="skills" class="py-20 px-4 bg-slate-950">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-3">
          Tech <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Stack</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto rounded-full"></div>
        <p class="text-slate-400 mt-4">Technologies and tools I work with</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% data.skills.forEach((skillGroup, index) => { %>
          <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all group" style="animation: fadeIn 0.6s ease-out <%= (index * 0.2) %>s both;">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center mr-4">
                <i class="fas <%= index === 0 ? 'fa-database' : index === 1 ? 'fa-code' : 'fa-lightbulb' %> text-white text-xl"></i>
              </div>
              <h3 class="text-white font-bold text-lg"><%= skillGroup.category %></h3>
            </div>
            <div class="flex flex-wrap gap-2">
              <% skillGroup.items.forEach(skill => { %>
                <span class="px-3 py-1 bg-slate-800 text-slate-300 rounded-full text-sm hover:bg-gradient-to-r hover:from-cyan-500 hover:to-blue-500 hover:text-white transition-all cursor-default">
                  <%= skill %>
                </span>
              <% }) %>
            </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Certifications -->
      <div class="mt-12">
        <h3 class="text-2xl font-bold text-white text-center mb-6">
          <i class="fas fa-certificate text-cyan-400 mr-2"></i>Certifications
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-3xl mx-auto">
          <% data.certifications.forEach(cert => { %>
            <div class="glass rounded-lg p-4 flex items-center hover:bg-white/10 transition">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-award text-white text-xl"></i>
              </div>
              <div>
                <h4 class="text-white font-semibold"><%= cert.name %></h4>
                <p class="text-slate-400 text-sm"><%= cert.issuer %> â€¢ <%= cert.year %></p>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Experience Section -->
  <section id="experience" class="py-20 px-4 bg-slate-900">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-3">
          Work <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Experience</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto rounded-full"></div>
      </div>
      
      <!-- Timeline -->
      <div class="relative">
        <!-- Vertical Line -->
        <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-cyan-500 to-blue-500"></div>
        
        <% data.experience.forEach((exp, index) => { %>
          <div class="relative mb-12 <%= index % 2 === 0 ? 'md:pr-1/2' : 'md:pl-1/2 md:text-right' %>">
            <!-- Timeline dot -->
            <div class="hidden md:block absolute left-1/2 top-6 transform -translate-x-1/2 w-4 h-4 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 border-4 border-slate-900"></div>
            
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all <%= index % 2 === 0 ? 'md:mr-8' : 'md:ml-8' %>">
              <div class="flex items-start justify-between flex-wrap gap-2 mb-3">
                <div>
                  <h3 class="text-xl font-bold text-white"><%= exp.role %></h3>
                  <p class="text-cyan-400 font-semibold"><%= exp.company %></p>
                </div>
                <span class="px-3 py-1 bg-blue-500/20 text-blue-400 rounded-full text-sm font-semibold border border-blue-500/30">
                  <%= exp.type %>
                </span>
              </div>
              <p class="text-slate-400 text-sm mb-3 flex items-center <%= index % 2 === 0 ? '' : 'md:justify-end' %>">
                <i class="far fa-calendar mr-2"></i><%= exp.period %>
              </p>
              <p class="text-slate-300"><%= exp.description %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <!-- Projects Section -->
  <section id="projects" class="py-20 px-4 bg-slate-950">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-3">
          Featured <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Projects</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto rounded-full"></div>
        <p class="text-slate-400 mt-4">Some of my recent work and contributions</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% data.projects.forEach((project, index) => { %>
          <div class="glass rounded-xl overflow-hidden hover:scale-105 transition-transform duration-300 group" style="animation: fadeIn 0.6s ease-out <%= (index * 0.1) %>s both;">
            <!-- Project Header -->
            <div class="bg-gradient-to-br from-cyan-500/20 to-blue-500/20 p-6 border-b border-slate-700">
              <div class="flex items-start justify-between mb-3">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center">
                  <i class="fas <%= project.category === 'Data Engineering' ? 'fa-database' : project.category === 'Data Analysis' ? 'fa-chart-line' : 'fa-code' %> text-white text-xl"></i>
                </div>
                <span class="px-3 py-1 bg-slate-800 text-cyan-400 rounded-full text-xs font-semibold">
                  <%= project.category %>
                </span>
              </div>
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-cyan-400 transition">
                <%= project.title %>
              </h3>
            </div>
            
            <!-- Project Body -->
            <div class="p-6">
              <p class="text-slate-300 text-sm mb-4 leading-relaxed">
                <%= project.description %>
              </p>
              
              <!-- Tech Stack -->
              <div class="flex flex-wrap gap-2 mb-4">
                <% project.tech.forEach(tech => { %>
                  <span class="px-2 py-1 bg-slate-800 text-slate-400 rounded text-xs">
                    <%= tech %>
                  </span>
                <% }) %>
              </div>
              
              <!-- Project Link -->
              <% if (project.link && project.link !== '#') { %>
                <% if (project.link.includes('github.com')) { %>
                  <a href="<%= project.link %>" target="_blank" rel="noopener noreferrer" 
                     class="inline-flex items-center text-cyan-400 hover:text-cyan-300 font-semibold text-sm group-hover:underline transition">
                    <i class="fab fa-github mr-2"></i>View on GitHub
                    <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform"></i>
                  </a>
                <% } else { %>
                  <a href="<%= project.link %>" target="_blank" rel="noopener noreferrer" 
                     class="inline-flex items-center text-cyan-400 hover:text-cyan-300 font-semibold text-sm group-hover:underline transition">
                    <i class="fas fa-external-link-alt mr-2"></i>View Live Project
                    <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform"></i>
                  </a>
                <% } %>
              <% } else { %>
                <span class="inline-flex items-center text-slate-500 font-semibold text-sm cursor-not-allowed">
                  <i class="fas fa-lock mr-2"></i>Not Published
                </span>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section id="contact" class="py-20 px-4 bg-slate-900">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-12">
        <h2 class="text-4xl font-bold text-white mb-3">
          Get In <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Touch</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto rounded-full"></div>
        <p class="text-slate-400 mt-4">Let's discuss how I can help transform your data into insights</p>
      </div>
      
      <div class="glass rounded-2xl p-8 md:p-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <!-- Email -->
          <a href="mailto:<%= data.profile.contact.email %>" class="group">
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition">
                <i class="fas fa-envelope text-white text-2xl"></i>
              </div>
              <h3 class="text-white font-semibold mb-2">Email</h3>
              <p class="text-cyan-400 text-sm break-all"><%= data.profile.contact.email %></p>
            </div>
          </a>
          
          <!-- WhatsApp -->
          <a href="https://wa.me/<%= data.profile.contact.phone %>" target="_blank" rel="noopener noreferrer" class="group">
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition">
                <i class="fab fa-whatsapp text-white text-2xl"></i>
              </div>
              <h3 class="text-white font-semibold mb-2">WhatsApp</h3>
              <p class="text-cyan-400 text-sm"><%= data.profile.contact.phone %></p>
            </div>
          </a>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="<%= data.profile.contact.linkedin %>" target="_blank" rel="noopener noreferrer"
             class="bg-gradient-to-r from-cyan-500 to-blue-500 text-white px-8 py-3 rounded-lg font-semibold hover:shadow-2xl hover:scale-105 transition-all inline-flex items-center justify-center">
            <i class="fab fa-linkedin-in mr-2"></i>Connect on LinkedIn
          </a>
          <a href="<%= data.profile.contact.github %>" target="_blank" rel="noopener noreferrer"
             class="glass text-white px-8 py-3 rounded-lg font-semibold hover:bg-white/10 transition-all inline-flex items-center justify-center">
            <i class="fab fa-github mr-2"></i>Follow on GitHub
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <%- include('../partials/footer') %>
  
  <script>
    // Typewriter effect with JavaScript for long text
    const typewriterText = "<%= data.profile.role %>";
    const typewriterElement = document.getElementById('typewriter-text');
    let charIndex = 0;
    
    function typeWriter() {
      if (charIndex < typewriterText.length) {
        const currentText = typewriterText.substring(0, charIndex + 1);
        typewriterElement.innerHTML = currentText + '<span class="typewriter-cursor">|</span>';
        charIndex++;
        setTimeout(typeWriter, 80); // Speed typing (80ms per character)
      } else {
        // Keep blinking cursor after typing is done
        typewriterElement.innerHTML = typewriterText + '<span class="typewriter-cursor">|</span>';
      }
    }
    
    // Start typewriter after 1 second delay
    setTimeout(typeWriter, 1000);
  </script>
  
</body>
</html>
