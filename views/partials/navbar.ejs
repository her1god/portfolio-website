  </div>
  
  <!-- Mobile Menu (Hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden glass">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="#home" class="mobile-nav-link block text-slate-300 hover:text-white hover:bg-white/5 px-3 py-2 rounded-md text-base font-medium transition">
